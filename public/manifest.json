{
  "manifest_version": 2,
  "name": "ArConnect",
  "version": "0.4.1",
  "author": "th8ta",
  "description": "Secure wallet management for Arweave",
  "permissions": ["activeTab", "tabs", "storage", "contextMenus", "<all_urls>"],
  "background": {
    "scripts": ["build/scripts/background.js"]
  },
  "icons": {
    "64": "icons/logo64.png",
    "128": "icons/logo128.png",
    "256": "icons/logo256.png"
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/logo64.png",
      "128": "icons/logo128.png",
      "256": "icons/logo256.png"
    },
    "default_title": "ArConnect",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "welcome.html",
    "archive.html",
    "auth.html",
    "build/scripts/injected.js",
    "*.js.map"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["build/scripts/content.js", "fake-news-content-script.js"],
      "run_at": "document_end"
    }
  ]
}
